<configure
    xmlns="http://namespaces.zope.org/zope"
    i18n_domain="pmr2">

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.WorkspaceDirObjListVocabFactory"
      name="pmr2.vocab.workspace_dir_obj"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.ManifestListVocabFactory"
      name="pmr2.vocab.manifest"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.PMR2TransformsVocabFactory"
      name="pmr2.vocab.transforms"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.PMR2IndexesVocabFactory"
      name="pmr2.vocab.indexes"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.EFTypeVocabFactory"
      name="pmr2.vocab.eftype"
      />

  <!-- need factory method to make class because schemas depend on this -->
  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.ExposureFileAnnotatorVocabFactory"
      name="pmr2.vocab.ExposureFileAnnotators"
      />

  <!-- factory is the class because we are reusing this without context -->
  <utility
      provides="zope.schema.interfaces.IVocabulary"
      factory="pmr2.app.vocab.ExposureFileNoteViewVocab"
      name="pmr2.vocab.ExposureFileAnnotators"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.ExposureFileNotesAvailableVocabFactory"
      name="pmr2.vocab.ExposureFileNotesAvailable"
      />

  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      component="pmr2.app.vocab.DocViewGenVocabFactory"
      name="pmr2.vocab.DocViewGen"
      />

</configure>
