<configure
    xmlns="http://namespaces.zope.org/zope"
    i18n_domain="pmr2">

  <!-- Note storage -->

  <adapter
      for="pmr2.app.interfaces.IExposureFile"
      factory=".note.BasicMathMLNoteFactory"
      provides="pmr2.app.interfaces.IRawTextNote"
      name="basic_mathml"
      />

  <adapter
      for="pmr2.app.interfaces.IExposureFile"
      factory=".note.BasicCCodeNoteFactory"
      provides="pmr2.app.interfaces.IRawTextNote"
      name="basic_ccode"
      />

  <adapter
      for="pmr2.app.interfaces.IExposureFile"
      factory=".note.CmetaNoteFactory"
      provides=".interfaces.ICmetaNote"
      name="cmeta"
      />

  <adapter
      for="pmr2.app.interfaces.IExposureFile"
      factory=".note.OpenCellSessionNoteFactory"
      provides=".interfaces.IOpenCellSessionNote"
      name="opencellsession"
      />

  <!-- Note Generation -->

  <utility
      name="basic_mathml"
      component=".annotator.CellML2MathMLAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="basic_ccode"
      component=".annotator.CellML2CAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="cmeta"
      component=".annotator.CmetaAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

  <utility
      name="opencellsession"
      component=".annotator.OpenCellSessionAnnotatorFactory"
      provides="pmr2.app.annotation.interfaces.IExposureFileAnnotator"
      />

</configure>
