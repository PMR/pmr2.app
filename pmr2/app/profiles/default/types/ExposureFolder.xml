<?xml version="1.0"?>
<object name="ExposureFolder"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">PMR2 Exposure Folder</property>
 <property name="description">
    A folder within an exposure that represents its counterpart in 
    its workspace.
 </property>
 <property name="content_meta_type">ExposureFolder</property>
 <property name="product">pmr2.app</property>
 <property name="factory">addExposureFolder</property>
 <property name="immediate_view">folder_listing</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="add_view_expr">string:${folder_url}/+/addExposureFolder</property>
 <property name="allowed_content_types">
  <element value="ExposureFile"/>
  <element value="ExposureFolder"/>
  <element value="Document"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">exposure_info</property>
 <property name="view_methods">
  <element value="exposure_info"/>
  <element value="document_view"/>
  <element value="folder_listing"/>
  <!-- Showcase view? -->
 </property>

 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>

 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True" i18n:attributes="title">
  <permission value="View"/>
 </action>

 <action title="Edit" action_id="edit" category="object" condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True"
    i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>

 <action title="Wizard" action_id="wizard" category="object" 
    url_expr="string:${object_url}/wizard" visible="True" 
    i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>

 <action title="View Gen" action_id="docviewgen" 
    category="object" 
    url_expr="string:${object_url}/@@docviewgen" visible="True"
    i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>

</object>
