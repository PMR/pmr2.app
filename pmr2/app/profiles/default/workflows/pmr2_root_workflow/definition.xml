<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="pmr2.app"
             workflow_id="pmr2_root_workflow"
             title="PMR2 Root Workflow"
             description="Workflow for the PMR2 root object."
             state_variable="review_state"
             initial_state="new">

 <permission>Access contents information</permission>
 <permission>List folder contents</permission>
 <permission>Modify portal content</permission>
 <permission>Add portal content</permission>
 <permission>View</permission>
 <permission>Manage PMR2</permission>

 <state state_id="new" title="New" i18n:attributes="title">
  <description i18n:translate="">
    Freshly created PMR2 instance; this must be configured by the 
    administrator before it can be opened to the public for their use.
  </description>
  <exit-transition transition_id="open"/>
  <exit-transition transition_id="closed"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Add portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Manage PMR2" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>

 <state state_id="closed" title="Closed" i18n:attributes="title">
  <description i18n:translate="">
    Closed to public, usually for maintanence.
  </description>
  <exit-transition transition_id="open"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Add portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Manage PMR2" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>

 <state state_id="opened" title="Opened" i18n:attributes="title">
  <description i18n:translate="">
    Open to public usage.
  </description>
  <exit-transition transition_id="close"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Member</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
  </permission-map>
  <permission-map name="Add portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Member</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="Manage PMR2" acquired="False">
  </permission-map>
 </state>

 <transition transition_id="open" new_state="opened"
             title="Opens access to repository"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate="">
    Open the repository for access by users.
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=open"
          category="workflow"
          i18n:translate="">Open</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>

 <transition transition_id="close" new_state="closed"
             title="Close access to repository"
             trigger="USER"
             before_script="" after_script=""
             i18n:attributes="title">
  <description i18n:translate="">
    Close the repository to public access.
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=close"
          category="workflow"
          i18n:translate="">Close</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 
